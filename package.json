{
  "name": "annoted",
  "version": "1.0.0",
  "description": "Webpage annotation tool with drawing and screenshot capabilities",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:watch": "wxt & chokidar '.output/chrome-mv3/manifest.json' -c 'node scripts/fix-manifest.js'",
    "build": "wxt build && node scripts/fix-manifest.js",
    "postbuild": "node scripts/fix-manifest.js",
    "fix-manifest": "node scripts/fix-manifest.js",
    "zip": "wxt zip"
  },
  "dependencies": {
    "jspdf": "^3.0.4",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wxt": "^0.19.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  }
}
